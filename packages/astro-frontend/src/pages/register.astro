---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <main id="register-main">
    <div class="flex flex-row w-screen h-screen justify-center align-middle">
      <div
        id="parent-div"
        class="card shadow-2xl p-10 items-center self-center"
      >
        <!-- Insert form here -->
        <form
          class="flex flex-col space-y-4 w-200"
          hx-post="/partials/clicked/"
          hx-target="#parent-div"
          hx-swap="innerHTML"
        >
          <h1 class="text-2xl mx-auto gap-2">Register</h1>
          <label class="input input-bordered flex items-center gap-2 text-xl">
            Name
            <input name="name" type="text" class="grow" placeholder="" />
          </label>
          <label class="input input-bordered flex items-center gap-2 text-xl">
            Email
            <input name="email" type="text" class="grow" placeholder="" />
          </label>
          <!-- Submit button -->
          <button
            type="submit"
            class="btn btn-primary w-full max-w-xs mx-auto text-2xl"
          >
            Submit
          </button>
        </form>
      </div>
    </div>
  </main>
</Layout>
