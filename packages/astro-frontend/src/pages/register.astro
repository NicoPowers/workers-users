---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <main id="register-main">
    <div class="flex flex-row w-screen h-screen justify-center align-middle">
      <div
        id="parent-div"
        class="card shadow-2xl p-10 items-center self-center"
      >
        <!-- Insert form here -->
        <form
          class="flex flex-col space-y-4 w-200"
          hx-post="/partials/clicked/"
          hx-target="#parent-div"
          hx-swap="innerHTML"
          hx-disabled-elt="#submit_button"
        >
          <h1 class="text-2xl mx-auto gap-2">Register</h1>
          <label class="input input-bordered flex items-center gap-2 text-md text-slate-400">
            Name
            <input class="text-slate-900 text-xl" name="name" type="text" class="grow" placeholder="" required maxlength="20"/>
          </label>
          <label class="input input-bordered flex items-center gap-2 text-md text-slate-400">
            Email
            <input class="text-slate-900 text-xl" name="email" type="email" class="grow" placeholder="" required/>
          </label>
          <!-- Submit button -->
          <button
            id="submit_button"
            type="submit"
            class="btn btn-primary w-full max-w-xs mx-auto text-2xl"
            hx-indicator="#spinner"
          >
            Submit <span id="spinner" class="loading loading-spinner text-primary htmx-indicator"></span>
          </button>
        </form>        
      </div>
    </div>
  </main>
</Layout>
